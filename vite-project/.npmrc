# NPM Configuration for Unified Service Portal
# Ensures consistent behavior across different environments

# Use package-lock.json for deterministic installs
package-lock=true

# Automatically save installed packages to package.json
save=true

# Use exact versions in package.json (no ^ or ~)
save-exact=false

# Strict engine checking
engine-strict=true

# Audit level - fail on high severity vulnerabilities
audit-level=high
